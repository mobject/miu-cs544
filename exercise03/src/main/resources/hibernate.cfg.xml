<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- JDBC Database connection settings -->
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/cs544?useUnicode=true&amp;useJDBCCompliantTimezoneShift=true&amp;useLegacyDatetimeCode=false&amp;serverTimezone=UTC</property>
        <property name="connection.username">root</property>
        <property name="connection.password">root</property>
<!--         JDBC connection pool settings ... using built-in test pool-->
<!--        <property name="connection.pool_size">1</property>-->
        <!-- Select our SQL dialect -->
        <property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <!-- Echo the SQL to stdout -->
        <property name="show_sql">true</property>
        <!-- Set the current session context -->
        <property name="current_session_context_class">thread</property>
        <!-- Drop and re-create the database schema on startup -->
        <property name="hbm2ddl.auto">create</property>
        <mapping class="entity.Car" />
        <mapping class="entity.Owner" />
        <mapping class="entity.a.Department" />
        <mapping class="entity.a.Employee" />
        <mapping class="entity.b.Book" />
        <mapping class="entity.b.Publisher" />
        <mapping class="entity.c.Course" />
        <mapping class="entity.c.Student" />
        <mapping class="entity.d.Customer" />
        <mapping class="entity.d.Reservation" />
        <mapping class="entity.f.Office" />
        <mapping class="entity.f.Department" />
        <mapping class="entity.f.Employee" />
    </session-factory>
</hibernate-configuration>